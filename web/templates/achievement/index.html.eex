<h2>Listing achievements</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for achievement <- @achievements do %>
    <tr>
      <td><%= link achievement.title, to: achievement_path(@conn, :show, achievement) %></td>
      <td><%= achievement.description %></td>
    </tr>
<% end %>
  </tbody>
</table>

<%= link "New achievement", to: achievement_path(@conn, :new) %>
